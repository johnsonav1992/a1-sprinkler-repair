---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout noPadding>
  <main class="main-content">
    <div class="splash-img"></div>
  </main>
</Layout>

<style>
  .main-content {
    position: relative;
    width: 100vw;
    min-width: 100vw;
    max-width: 100vw;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 2rem;
  }

  .splash-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    min-width: 100vw;
    max-width: 100vw;
    background-image: url("/src/assets/sprinkler-2.webp");
    background-size: cover;
    background-position: center;
    height: 400px;
    z-index: 1;
  }
</style>
