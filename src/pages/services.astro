---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import repair1 from "../assets/sprinkler-repair-1.jpg";
import repair2 from "../assets/sprinkler-repair-2.jpg";
import wiring from "../assets/wiring.jpg";
import valve from "../assets/valve.jpg";

const services = [
  {
    title: "Leak Repair",
    description:
      "We quickly locate and repair known and hidden leaks in your irrigation system, helping you conserve water and prevent costly landscape damage.",
    imgUrl: repair2,
  },
  {
    title: "Valve Replacement",
    description:
      "Faulty or aging valves can cause uneven watering and system failures. We expertly replace valves and solenoids to restore smooth, reliable operation.",
    imgUrl: valve,
  },
  {
    title: "Broken Sprinklers & Tune-Ups",
    description:
      "From damaged sprinkler heads to clogged lines, we handle all repairs and provide thorough tune-ups to keep your system performing its best.",
    imgUrl: repair1,
  },
  {
    title: "Wire Troubleshooting",
    description:
      "Electrical issues can be tricky. We diagnose and resolve wiring problems to ensure every zone and controller works flawlessly.",
    imgUrl: wiring,
  },
];
---

<Layout noPadding>
  <div class="services-outer">
    <div class="services-container">
      {
        services.map((service, idx) => (
          <div class={"service-row" + (idx % 2 === 1 ? " reverse" : "")}>
            <div class="service-img">
              <Image
                src={service.imgUrl}
                width={600}
                height={400}
                alt={service.title}
              />
            </div>
            <div class="service-text">
              <h2>{service.title}</h2>
              <p>{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .services-outer {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
  .services-container {
    width: 100vw;
    max-width: 100vw;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0;

    .service-row {
      width: 100vw;
      max-width: 100vw;
      margin: 0;
      display: flex;
      flex-direction: row;
      align-items: stretch;
      min-height: 260px;
      background: none;
      border-radius: 0;
      box-shadow: none;
      overflow: visible;

      &.reverse {
        flex-direction: row-reverse;
      }

      .service-img {
        flex: 1 1 50%;
        display: flex;
        align-items: stretch;
        justify-content: flex-end;
        background: none;
        min-width: 0;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          max-width: none;
          max-height: 320px;
          border-radius: 0;
          box-shadow: none;
          display: block;
        }
      }

      .service-text {
        flex: 1 1 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 2rem 5vw 2rem 5vw;
        background: none;
        min-width: 0;

        h2 {
          font-size: 2.2rem;
          font-weight: 700;
          margin-bottom: 1rem;
          color: var(--color-primary, #1a3a4a);
          word-break: break-word;
        }
        p {
          font-size: 1.05rem;
          line-height: 1.6;
          color: var(--color-text, #222);
          margin: 0;
          word-break: break-word;
        }
      }
    }
  }

  @media (max-width: 900px) {
    .services-container {
      .service-row,
      .service-row.reverse {
        flex-direction: column;
        min-height: 0;
        .service-img,
        .service-text {
          flex: unset;
          width: 100%;
          min-width: 0;
          min-height: 160px;
        }
        .service-img {
          justify-content: center;
          img {
            max-width: 100%;
            max-height: 180px;
          }
        }
        .service-text {
          align-items: center;
          padding: 1.2rem 1.2rem 2rem 1.2rem;
          h2 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            text-align: center;
          }
          p {
            font-size: 0.98rem;
            text-align: center;
          }
        }
      }
    }
  }
</style>
