---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button/Button.astro";
import { MAIN_PHONE_NUMBER } from "../constants/contact-constants";
import sprinkler1 from "../assets/sprinkler-1.png";
import sprinkler3 from "../assets/sprinkler-3.jpg";
import Image from "astro/components/Image.astro";
import { getImage } from "astro:assets";

const img1 = await getImage({
  src: sprinkler1,
  width: 420,
  height: 288,
  format: "webp",
  quality: 80,
});
const img3 = await getImage({
  src: sprinkler3,
  width: 420,
  height: 288,
  format: "webp",
  quality: 80,
});
---

<Layout 
  noPadding
  title="Contact A-1 Sprinkler Repair"
  description="Ready to schedule sprinkler repair? Contact A-1 Sprinkler Repair for professional irrigation services in the DFW area. Call today for fast, reliable service."
  keywords="contact sprinkler repair, schedule irrigation service, DFW sprinkler repair contact, A-1 Sprinkler Repair phone number"
>
  <div class="contact-container">
    <div class="contact-content">
      <h1>Contact Us</h1>
      <p>
        Ready to schedule an appointment or have a question? We're here to help!
        <span class="contact-break"><br /></span>
        Call us today and let A-1 Sprinkler Repair take care of your irrigation needs.
      </p>
      <Button
        color="primary"
        size="xlarge"
        onclick={`window.location.href='tel:${MAIN_PHONE_NUMBER}';`}
      >
        Call {MAIN_PHONE_NUMBER}
      </Button>
    </div>
    <div class="contact-images">
      <Image
        src={img1.src}
        alt="Sprinkler repair in action"
        width={img1.attributes.width}
        height={img1.attributes.height}
        class="contact-img"
      />
      <Fragment slot="head">
        <link rel="preload" href={img1.src} as="image" />
      </Fragment>
      <Image
        src={img3.src}
        alt="Healthy green lawn"
        width={img3.attributes.width}
        height={img3.attributes.height}
        class="contact-img"
      />
      <Fragment slot="head">
        <link rel="preload" href={img3.src} as="image" />
      </Fragment>
    </div>
  </div>
</Layout>

<style>
  .contact-container {
    min-height: 80vh;
    width: 100vw;
    max-width: 100vw;
    display: flex;
    flex-direction: row;
    align-items: stretch;
    justify-content: center;
    gap: 4vw;
    padding: 5vw 4vw 4vw 4vw;
    background: var(--color-lighter-neutral);
    box-sizing: border-box;

    .contact-content {
      flex: 1 1 0%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 2.2rem;
      max-width: 480px;
      min-width: 280px;
      justify-content: center;

      h1 {
        font-size: 2.3rem;
        font-weight: 800;
        margin-bottom: 0.7rem;
        color: var(--color-primary);
        line-height: 1.1;
      }

      p {
        font-size: 1.15rem;
        color: var(--color-secondary);
        margin-bottom: 0.7rem;
        line-height: 1.6;
      }

      button {
        margin-top: 0.7rem;
      }
    }

    .contact-images {
      flex: 1 1 0%;
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
      align-items: center;
      justify-content: center;
      min-width: 220px;
      max-width: 440px;
      width: 100%;
    }

    .contact-img {
      width: 100%;
      max-width: 420px;
      height: auto;
      border-radius: 1.2rem;
      box-shadow: 0 6px 24px rgba(0, 0, 0, 0.11);
      object-fit: cover;
      background: #f6f6f6;
      transition: transform 0.2s;
      display: block;
    }

    .contact-img:hover {
      transform: scale(1.025);
    }
  }

  @media (max-width: 1300px) {
    .contact-container {
      flex-direction: column;
      gap: 3vw;
      padding: 4vw 1vw 3vw 1vw;

      .contact-content {
        align-items: center;
        text-align: center;
        max-width: 100%;
        min-width: 0;

        h1 {
          font-size: 2rem;
        }

        p {
          font-size: 1.1rem;
        }
      }

      .contact-images {
        flex-direction: row;
        gap: 2rem;
        max-width: 100%;
        min-width: 0;
      }
    }

    .contact-img {
      max-width: 180px;
      border-radius: 0.8rem;
    }
  }

  @media (max-width: 900px) {
    .contact-container {
      flex-direction: column;
      gap: 2vw;
      padding: 3vw 0.5vw 2vw 0.5vw;

      .contact-content {
        h1 {
          font-size: 1.4rem;
        }

        p {
          font-size: 1.02rem;
        }

        button {
          margin-bottom: 2.2rem;
        }
      }

      .contact-content {
        padding: 0 1.2rem;
        margin-top: 2.2rem;
      }

      .contact-images {
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
      }
    }

    .contact-img {
      max-width: 98vw;
      border-radius: 0.5rem;
    }
  }

  @media (max-width: 700px) {
    .contact-container {
      min-height: unset;
      padding: 2vw 0.2vw 2vw 0.2vw;
      gap: 1.2vw;

      .contact-content {
        h1 {
          font-size: 1.6rem;
        }

        p {
          font-size: 0.98rem;
        }

        button {
          margin-bottom: 1.7rem;
        }

        padding: 0 0.8rem;
        margin-top: 1.5rem;
      }

      .contact-images {
        flex-direction: column;
        gap: 1.2rem;
        margin-bottom: 2.2rem;
      }
    }

    .contact-img {
      max-width: 98vw;
      border-radius: 0.5rem;
    }
  }

  .contact-content h1 {
    font-size: clamp(1.7rem, 6vw, 2.3rem);
  }

  .contact-content p {
    font-size: clamp(1.05rem, 2.5vw, 1.18rem);
  }

  .contact-break {
    display: none;
  }

  @media (max-width: 1300px) {
    .contact-break {
      display: inline;
    }
  }
</style>
