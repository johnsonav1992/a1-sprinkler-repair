---
import Image from "astro/components/Image.astro";
import brands from "../../../assets/brands.png";
---

<div class="content-container">
  <div class="brands-img-container">
    <Image
      src={brands}
      alt="A-1 Sprinkler Repair Brands Serviced"
      width={700}
      height={400}
    />
  </div>
  <div class="text-content-container">
    <h1 class="title">We service all brands</h1>
  </div>
</div>

<style>
  .content-container {
    padding: 4rem;
    display: flex;
    gap: 7rem;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;

    @media (max-width: 1024px) {
      flex-direction: column;
      padding: 1.5rem;
      gap: 1.5rem;
      align-items: center;

      .brands-img-container {
        order: 2;
      }

      .text-content-container {
        order: 1;
      }
    }

    .text-content-container {
      flex: 1;
      display: flex;
      justify-content: center;
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;

      @media (max-width: 1024px) {
        gap: 1rem;
      }

      .title {
        font-size: 4rem;

        @media (max-width: 1600px) {
          font-size: 3rem;
        }

        @media (max-width: 1160px) {
          font-size: 1.8rem;
        }
      }

      .text {
        font-size: 1.1rem;
        line-height: 1.5;

        @media (max-width: 768px) {
          font-size: 1rem;
        }
      }
    }

    .brands-img-container {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem 1.2rem;

      @media (max-width: 1024px) {
        width: 100%;
        max-width: 400px;
        padding: 0;
        padding-bottom: 2rem;
      }

      img {
        width: 100%;
        height: auto;
        object-fit: contain;
        max-width: 700px;

        @media (min-width: 1200px) {
          max-width: 900px;
        }
        @media (max-width: 768px) {
          max-width: 300px;
        }
      }
    }
  }
</style>
