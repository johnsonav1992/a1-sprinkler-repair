---
import Image from "astro/components/Image.astro";
import { MAIN_ROUTES } from "../../constants/routes-constants";
import {
  LICENSE_NUMBER,
  MAIN_PHONE_NUMBER,
} from "../../constants/contact-constants";
import logo from "../../assets/logo.png";

const routes = MAIN_ROUTES;
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-row">
      <Image
        src={logo}
        alt="A-1 Sprinkler Repair Logo"
        width={200}
        height={54}
        class="footer-logo"
        style="filter: brightness(0) invert(1) grayscale(0.2) opacity(0.95);"
        loading="lazy"
        decoding="async"
      />
      <div class="copyright-licensing">
        <p class="footer-text">
          &copy; {new Date().getFullYear()} A-1 Sprinkler Repair. All rights reserved.
        </p>
        <p><i class="ti ti-phone"></i> {MAIN_PHONE_NUMBER}</p>
        <small>Licensed Irrigator #{LICENSE_NUMBER}</small>
      </div>
      <nav class="footer-nav">
        {
          routes.map((route) => (
            <a href={route.path} class="footer-link">
              {route.label}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-secondary);
    color: #fff;
    text-align: center;
    width: 100%;
    padding: 2rem 0 1.5rem 0;

    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      width: 100%;
      margin: 0 auto;
      padding-inline: 2rem;

      .footer-row {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        position: relative;

        .copyright-licensing {
          display: flex;
          flex-direction: column;
          gap: 0.5rem;
          font-size: 0.9rem;
          color: #fff;
          opacity: 0.85;
        }

        .footer-logo {
          height: 54px;
          width: auto;
          filter: brightness(0) invert(1) grayscale(0.2) opacity(0.95);
        }

        .footer-nav {
          display: flex;
          gap: 2.5rem;
        }

        .footer-link {
          color: #fff;
          opacity: 0.7;
          text-decoration: none;
          font-size: 1rem;
          transition:
            opacity 0.2s,
            text-decoration 0.2s;
        }
        .footer-link:hover {
          opacity: 1;
          text-decoration: underline;
        }

        .footer-text {
          font-size: 1rem;
          opacity: 0.85;
          margin: 0;
          letter-spacing: 0.02em;
          text-align: right;
          align-self: center;
        }
      }
    }

    @media (max-width: 900px) {
      .footer-content {
        padding: 0 0.5rem;
        .footer-row {
          flex-direction: column;
          align-items: center;
          gap: 1rem;
          padding: 0;
          .footer-text {
            width: 100%;
            text-align: center;
            margin-top: 0.5rem;
          }
        }
      }
    }
  }
</style>
