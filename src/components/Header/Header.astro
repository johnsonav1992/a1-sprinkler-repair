---
type Props = {};

const {} = Astro.props;

const routes = [
  {
    path: "/",
    label: "Home",
  },
  {
    path: "/about",
    label: "About",
  },
  {
    path: "/services",
    label: "Services",
  },
  {
    path: "/contact",
    label: "Contact",
  },
];
---

<div class="outer-container">
  <div class="title">
    <img
      src="src/assets/logo.png"
      alt="A-1 Sprinkler Repair"
      width="250"
      style="filter: drop-shadow(3px 2px 2px rgba(0, 0, 0, 0.2));"
    />
  </div>
  <nav class="main-nav">
    <ul>
      {
        routes.map((route) => (
          <li>
            <a href={route.path}>{route.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<style>
  .outer-container {
    width: 100%;
    height: var(--header-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    top: 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    border-bottom: 1px solid var(--color-light-neutral);
    z-index: 1200;
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    padding-left: 1rem;
  }

  .main-nav {
    display: flex;
    align-items: center;
    margin-right: 1rem;

    ul {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;
    }

    li {
      margin: 0 1rem;
    }

    a {
      text-decoration: none;
      color: var(--color-secondary);
      font-weight: 600;
      font-size: 1.2rem;
      transition: all 0.3s ease;
      position: relative;

      &:hover {
        transform: translateY(-2px);
        cursor: pointer;

        &::after {
          width: 100%;
        }
      }

      &::after {
        content: "";
        position: absolute;
        width: 0;
        height: 3px;
        bottom: -2px;
        left: 0;
        border-radius: 2px;
        background-color: var(--color-primary);
        transition: width 0.3s ease;
      }
    }
  }
</style>
